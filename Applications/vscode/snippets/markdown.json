{
    "Insert a graph (mermaid)": {
      "prefix": ["graph"],
      "body": ["<center>\n", "```mermaid", "graph TD", "\t$0", "```", "\n</center>"],
      "description": "Insert a GraphVis dotgraph"
    },
    "Insert multiline maths block": {
      "prefix": ["maths block"],
      "body": ["$$", "${0:$TM_SELECTED_TEXT}", "$$"],
      "description": "Insert a mathjax maths block"
    },
    "Insert graph edge (mermaid)": {
      "prefix": ["edge"],
      "body": ["${1:} --> |${3: }| ${2:}"],
      "description": "Insert an edge in the graph"
    },
    "Insert mathjax fraction": {
      "prefix": ["fraction"],
      "body": ["\\frac{${1: }}{${2: }}$0"],
      "description": "Insert a mathjax maths block"
    },
    "Insert mathjax exp": {
      "prefix": ["exponent"],
      "body": ["${1: }^{${2: }}$0"],
      "description": "Insert a mathjax maths block"
    },
    "Insert centered image": {
        "prefix": ["image"],
        "body": ["<center>\n\n![${1:}](${2:})\n\n</center>"],
        "description": "Insert a centered image"
    },
    "Highlight": {
      "prefix": ["highlight block"],
      "body": ["<mark>${0:$TM_SELECTED_TEXT}</mark>"],
      "description": "Highlight a block of text"
    },
}
