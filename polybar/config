;=====================================================
;   date module
;=====================================================
[module/date]
type = custom/script
tail = true
label = "%{F#fff} %output% %{F-}"
exec = date +'%a %d %b %Y'
interval = 1
click-left = ~/linux-stuff/scripts/rofiScripts.sh calendar now
click-right = ~/linux-stuff/scripts/rofiScripts.sh calendar next

;=====================================================
;   time module 
;=====================================================
[module/time]
type = custom/script
tail = true
label = "%{F#fff}%output% %{F-}"
exec = date +'%H:%M'
interval = 1
click-left = timestamp=$(date +%Y-%m-%d-%Hh%Mm%Ss%3N) && maim -s ~/Pictures/screenshot-$timestamp.png && pinta ~/Pictures/screenshot-$timestamp.png

;=====================================================
;   express vpn module
;=====================================================
[module/express-vpn]
type = custom/script
tail = true
label = "%output% "
exec = ~/linux-stuff/scripts/polybarScripts.sh statusVPN
interval = 1
click-left = ~/linux-stuff/scripts/polybarScripts.sh toggleVPN & ~/linux-stuff/scripts/polybarScripts.sh statusVPN

;=====================================================
;   internet module
;=====================================================
[module/internet]
type = custom/script
tail = true
;device = "wlp1s0"
label = "%output% "
exec = ~/linux-stuff/scripts/polybarScripts.sh internetStatus
interval = 1
click-left = xterm -e nmtui

;=====================================================
;   battery module
;=====================================================
[module/battery]
type = internal/battery
format-charging = <label-charging>
format-discharging = %{F#ed4c4c}<ramp-capacity>%{F-} <label-discharging>
format-full = %{F#ed4c4c}<ramp-capacity>%{F-} <label-full>

label-charging = %{F#ed4c4c}%{F-} %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

;=====================================================
;   user
