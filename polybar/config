label-unfocused-foreground = #666
label-visible-foreground = #fff
label-urgent-foreground = #f00

label-focused = " %index% "
label-unfocused = " %index% "
label-visible = " %index% "
label-urgent = " %index% "

;label-focused = "%{T3} ●%{T-}"
;label-unfocused = "%{T3} ●%{T-}"
;label-visible = "%{T3} ●%{T-}"
;label-urgent = "%{T3} ●%{T-}"

