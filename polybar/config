; 1080p
font-2 = Iosevka:size=14;2
font-3 = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:size=14:antialias=true;3

;=====================================================
;   bar 1
;=====================================================
[bar/screen1]
monitor = eDP-1
height = ${variables.bar-height}
modules-right = alsa express-vpn internet battery
modules-center = date time
modules-left = user i3
;separator = ""
font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
line-size = 2
width = 99.4%
radius = 10
border-top-size = 1%
border-left-size = 0.6%

;=====================================================
;   bar 2
;=====================================================
[bar/screen2]
monitor = HDMI-1
height = ${variables.bar-height}
modules-right = temp mem cpu filesystem
modules-center = title
modules-left = user i3
;separator = ""
font-0 = ${fonts.font-2}
font-1 = ${fonts.font-3}
line-size = 2
width = 99.2%
radius = 10
border-top-size = 1.5%
border-left-size = 0.8%

;=====================================================
;   temp
;=====================================================
[module/temp]
type = internal/temperature
interval = 2
label = "%{F#ff99ff}%{F-} %temperature-c% "
format = <label>
thermal-zone = 7 ; x86_pkg_temp

;=====================================================
;   title bar
;=====================================================
[module/title]
type = internal/xwindow
label-maxlen = 100

;=====================================================
;   filesystem
;=====================================================
[module/filesystem]
type = internal/fs
mount-0 = /
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>
interval = 20
label-mounted = "%{F#ed4c4c}%{F-} %free% "
label-unmounted = %mountpoint%: not mounted
fixed-values = true

;=====================================================
;   cpu
;=====================================================

[module/cpu]
